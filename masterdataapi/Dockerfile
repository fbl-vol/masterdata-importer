FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src
COPY ["masterdataapi.csproj", "."]
RUN dotnet restore "masterdataapi.csproj"
COPY . .
RUN dotnet build "masterdataapi.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "masterdataapi.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "masterdataapi.dll"]
